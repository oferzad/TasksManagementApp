<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TasksManagementApp.Controlles"
             x:Class="TasksManagementApp.Views.StarRatingExample"
             Title="StarRatingExample">
    <VerticalStackLayout>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <local:StarRatingControl Rating="{Binding Rating}" NumStars="3"
                             StarSetColor="Gold"
                             StarUnsetColor="Gray"
                             HorizontalOptions="Center" />
            <Label Text="{Binding Rating, StringFormat='Rating: {0}'}"
           HorizontalOptions="Center" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>